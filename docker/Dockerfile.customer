# Dockerfile.customer
FROM openjdk:17-jre-slim

WORKDIR /app

# Kopiere die korrekte JAR
COPY target/marktsimulation-1.0.0-jar-with-dependencies.jar app.jar
COPY config/config.properties config/

# Keine exponierten Ports - Customer nutzt nur ausgehende Verbindungen

# Environment Variable f√ºr ID
ENV CUSTOMER_ID=C1

# Starte mit mode und id parameter
ENTRYPOINT ["sh", "-c", "java -jar app.jar --mode=customer --id=${CUSTOMER_ID}"]